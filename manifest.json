{
  "name": "Github Turbo PR",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "Github pull request page gets unresponsive on a big pr and makes it very hard to review.
   This extension optimizes the pr page and ",
  "homepage_url": "http://github.com/s-yadav/github-turbo-pr",
  "icons": {
    "16": "icons/turbopr16.png",
    "48": "icons/turbopr48.png",
    "128": "icons/turbopr128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "page_action": {
    "default_icon": {
        "19": "icons/turbopr19_disabled.png",
        "38": "icons/turbopr38_disabled.png"
    },
    "default_title": "Toggle turbo pr"
  },
  "permissions": [
    "https://github.com/*",
    "webNavigation"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}
